<h1><%= @user.email %>'s profile</h1>

<div class="block">
<h2>Daily Login Streak:
  <% if @user == current_user && @user.login_streak %>
    <%= @user.login_streak %>
  <% end %>
</h2>
<h2>Monthly Logins:
  <% if @user == current_user && @user.daily_logins %>
    <%= @user.daily_logins %>
  <% end %>
</h2>
  <table class="profile">
    <thead>
      <tr>
        <th>ID</th>
        <th>Email</th>
        <% if logged_in? && @user == current_user %>
          <th></th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= @user.id %></td>
        <td><%= @user.email %></td>
        <% if logged_in? && @user == current_user %>
          <td><%= link_to "Delete Profile", user_path(@user), method: :delete, data: { confirm: "Are you sure?" } %></td>
        <% end %>
      </tr>
    </tbody>
  </table>

  <%= link_to 'return to home page', root_path, class:"return-link" %>
</div>