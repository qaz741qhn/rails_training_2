<h1>All users</h1>
<table>
  <thead>
    <tr>
      <th>User ID</th>
      <th>User email</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td><%= link_to user.id, user %></td>
      <td><%= link_to user.email, user %></td>
      <td><%= link_to "View Profile", user_path(user) %></td>
      <% if logged_in? %>
        <% if user == current_user %>
          <td><%= link_to "Delete Profile", user_path(user), method: :delete, data: { confirm: "Are you sure?" } %></td>
        <% end %>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'return to home page', root_path %>