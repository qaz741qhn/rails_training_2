<h1>Welcome to my app :)</h1>

<div class="block">
  <% if !logged_in? %>
    <h3 class="link"><%=link_to 'Sign up', signup_path %></h3>
    <h3 class="link"><%=link_to 'Log in', login_path %></h3>
  <% else %>
    <h3 class="link"><%= link_to 'My page', user_path(current_user) %></h3>
    <h3 class="link"><%=link_to 'Log out', logout_path, method: :delete %></h3>
  <% end %>
  <h3 class="link"><%= link_to 'All users', users_path %></h3>
</div>